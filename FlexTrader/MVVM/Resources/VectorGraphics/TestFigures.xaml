<UserControl
    x:Class="FlexTrader.MVVM.Resources.VectorGraphics.TestFigures"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FlexTrader.MVVM.Resources.VectorGraphics"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1000"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <Viewbox Stretch="Uniform">
        <Path
            Width="8"
            Height="18"
            Fill="White">
            <Path.Data>
                <PathGeometry>
                    <PathFigure IsClosed="True" StartPoint="4,0">
                        <LineSegment Point="8,12" />
                        <LineSegment Point="6,13" />
                        <LineSegment Point="5,10" />
                        <LineSegment Point="5,18" />
                        <LineSegment Point="3,18" />
                        <LineSegment Point="3,10" />
                        <LineSegment Point="2,13" />
                        <LineSegment Point="0,12" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
            <Path.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="-30" />
                    <TranslateTransform X="-4" Y="3" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>
    </Viewbox>
</UserControl>
