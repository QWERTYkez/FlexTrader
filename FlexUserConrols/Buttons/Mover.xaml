<UserControl
    x:Class="FlexUserConrols.Buttons.Mover"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FlexUserConrols.Buttons"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="40"
    d:DesignWidth="45"
    mc:Ignorable="d">
    <Grid
        Width="45"
        Height="45"
        Margin="2.5,0,2.5,0"
        VerticalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="43*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="43*" />
            </Grid.RowDefinitions>
            <local:PaletteButton
                Grid.Row="0"
                VerticalAlignment="Top"
                Click="UP"
                Type="Horizontal">
                <Rectangle
                    Width="26"
                    Height="26"
                    Fill="White">
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="45" CenterX="13" CenterY="13" />
                    </Rectangle.RenderTransform>
                </Rectangle>
            </local:PaletteButton>
            <local:PaletteButton
                Grid.Row="3"
                VerticalAlignment="Bottom"
                Click="Down"
                Type="Horizontal">
                <Rectangle
                    Width="26"
                    Height="26"
                    Fill="White">
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="45" CenterX="13" CenterY="13" />
                    </Rectangle.RenderTransform>
                </Rectangle>
            </local:PaletteButton>
        </Grid>
    </Grid>
</UserControl>
