<Window
    x:Class="FlexTrader.MVVM.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FlexTrader.MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:FlexTrader.MVVM.Resources"
    Title="Settings"
    Width="550"
    Height="450"
    ResizeMode="CanResize"
    Topmost="True"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid Background="#FF1E1E1E">
        <TabControl>
            <TabItem Header="Style">
                <ScrollViewer>
                    <StackPanel x:Name="BaseStack" />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Colors" />
            <TabItem x:Name="Other" Header="Other" />
        </TabControl>
    </Grid>
</Window>
