<UserControl
    x:Class="UserControls.XComboBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid x:Name="GRD" Background="Yellow">
        <Label
            x:Name="LLL"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="Gray"
            Content="{Binding ElementName=LB, Path=SelectedItem.Big}"
            ToolTip="{Binding ElementName=LB, Path=SelectedItem.Small}" />
        <Popup x:Name="Pop" Placement="Bottom">
            <ListBox
                x:Name="LB"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label
                                Margin="-3,-5,0,-3"
                                Padding="0"
                                VerticalAlignment="Center"
                                Content="{Binding Path=Big}"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="Gold" />
                            <Label
                                Grid.Column="1"
                                Margin="5,-5,0,-5"
                                Padding="0"
                                VerticalAlignment="Center"
                                Content="{Binding Path=Small}"
                                FontSize="12"
                                Foreground="Gold" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Popup>
    </Grid>
</UserControl>
